<table class="form">
  <%= form_tag(controller: 'top', action: 'save') do %>
      <tr>
        <td>名前:</td>
        <td><%= text_field_tag('name') %></td>
      </tr>
      <tr>
        <td>メール:</td>
        <td><%= text_field_tag('mail') %></td>
      </tr>
      <tr>
        <td>メッセージ</td>
        <td><%= text_area_tag('message', '', size: '50x3') %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= submit_tag('Click') %></td>
      </tr>
  <% end %>
</table>

<table class="message">
  <tr>
    <th class="message">メッセージ</th>
    <th>名前</th>
    <th>メール</th>
    <th>投稿日時</th>
  </tr>
  <% @messages.each do |post_time, message| %>
      <tr>
        <td class="content"><%= message['content'] %></td>
        <td class="name"><%= message['name'] %></td>
        <td class="mail"><%= message['mail'] %></td>
        <td class="post_time"><%= Time.at(post_time.to_i) %></td>
      </tr>
  <% end %>
</table>